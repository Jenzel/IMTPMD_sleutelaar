<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="30"
        android:background="#99CCFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="402dp"
        android:gravity="right"
        android:background="#99CCFF"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:weightSum="3"
            android:layout_gravity="center"
            android:background="#99CCFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Sleutelaar"
                android:id="@+id/headerText2"
                android:textSize="40dp"
                android:autoText="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/logoImage"
                android:layout_margin="8dp"
                android:background="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:weightSum="1"
            android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/informatieView"
            android:layout_width="349dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/naam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Naam"
                android:inputType="textPersonName"
                android:layout_below="@+id/adres"
                android:layout_toRightOf="@+id/vorige"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp" />
            <EditText
                android:id="@+id/adres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Adres"
                android:inputType="textPostalAddress"
                android:layout_below="@+id/email"
                android:layout_toRightOf="@+id/vorige"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp" />

        <EditText
            android:id="@+id/telefoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telefoon"
            android:inputType="phone"
            android:layout_below="@+id/informatieView"
            android:layout_toRightOf="@+id/vorige"
            android:layout_toEndOf="@+id/vorige"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/telefoon"
            android:layout_toRightOf="@+id/vorige"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp" />

    </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#99CCFF"
            android:weightSum="10"
            android:layout_marginBottom="100dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="annuleren"
                android:id="@+id/vorige"
                android:textSize="20dp"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="Verzenden"
                android:id="@+id/volgende"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#FFFFFF"
                android:layout_marginLeft="130dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Jens/Desktop/De%20sleutelaar%20masterss/Eindopdracht_DeSleutelaar/app/src/main/res/layout/bestelling_layout.xml -->