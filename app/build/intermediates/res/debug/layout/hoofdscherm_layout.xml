<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="30"
        android:background="#99CCFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="103dp"
            android:gravity="right"
            android:background="#99CCFF">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#99CCFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De Sleutelaar"
                    android:id="@+id/headerText"
                    android:textSize="40dp"
                    android:autoText="false"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView"
                    android:layout_margin="8dp"
                    android:background="@drawable/logo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="354dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maak een keuze uit één van onze slotsystemen:"
                android:id="@+id/Selecteer"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="8dp"
                android:layout_margin="8dp"
                android:textSize="22dp"
                android:textIsSelectable="true"
                android:textColor="#000000"
                android:layout_weight="0.05" />

            <Spinner
                android:layout_width="384dp"
                android:layout_height="50dp"
                android:id="@+id/spinner"
                android:textSize="20dp"
                android:background="#99CCFF"
                android:popupBackground="#CCCCFF"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_vertical"
                android:gravity="center|center_vertical"
                android:textAlignment="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/bisInfoTextView"
                android:textSize="25dp"
                android:layout_margin="8dp"
                android:textColor="#010000"
                android:layout_weight="0.05" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beknopte_info"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textIsSelectable="true"
                android:textColor="#010000"
                android:layout_weight="0.22"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="280dp"
            android:layout_height="fill_parent"
            android:background="#99CCFF">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="106dp"
                android:layout_height="442dp"
                android:layout_weight="2.31">

            </LinearLayout>

            <Button
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:text="Volgende"
                android:id="@+id/selecteren"
                android:textSize="25dp"
                android:background="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
